<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.we.mapper.Usermapper">

    <select id="loginUser" parameterType="com.we.pojo.User" resultType="com.we.pojo.User">
        select * from  u_ser where 1=1
        <if test="uname!=null and uname!=''">
            and uname=#{uname}
        </if>
        <if test="mobile!=null and mobile!=''">
            and mobile=#{mobile}
        </if>
        <if test="e_mail!=null and e_mail!=''">
            and  e_mail=#{e_mail}
        </if>
        <if test="upassword!=null and upassword!=''">
            and upassword=#{upassword}
        </if>

    </select>
</mapper>